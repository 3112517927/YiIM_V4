<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector" >

            <TextView
                android:id="@+id/msg_tip_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.chyitech.yiim.common.CheckSwitchButton
                android:id="@+id/msg_tip_switch_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector" >

            <TextView
                android:id="@+id/msg_tip_keyguard"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_keyguard"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.chyitech.yiim.common.CheckSwitchButton
                android:id="@+id/msg_tip_switch_keyguard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dip"
            android:background="@color/cell_header_bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text="@string/str_msg_tip_roster"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector" >

            <TextView
                android:id="@+id/msg_tip_audio_tip_roaster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_audio_tip"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.chyitech.yiim.common.CheckSwitchButton
                android:id="@+id/msg_audio_tip_switch_roaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector" >

            <TextView
                android:id="@+id/msg_tip_vibrator_tip_roaster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_vibrator_tip"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.chyitech.yiim.common.CheckSwitchButton
                android:id="@+id/msg_vibrator_tip_switch_roster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dip"
            android:background="@color/cell_header_bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text="@string/str_msg_tip_room"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector" >

            <TextView
                android:id="@+id/msg_tip_audio_tip_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_audio_tip"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.chyitech.yiim.common.CheckSwitchButton
                android:id="@+id/msg_audio_tip_switch_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector" >

            <TextView
                android:id="@+id/msg_tip_vibrator_tip_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_vibrator_tip"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.chyitech.yiim.common.CheckSwitchButton
                android:id="@+id/msg_vibrator_tip_switch_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dip"
            android:background="@color/cell_header_bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text="@string/str_msg_tip_sound"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:onClick="onSoundOfficeClick" >

            <TextView
                android:id="@+id/msg_tip_sound_office"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_sound_office"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/msg_sound_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false"
                android:contentDescription="@null"
                android:src="@drawable/common_ratio_select"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:onClick="onSoundChordClick" >

            <TextView
                android:id="@+id/msg_tip_sound_chord"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_sound_chrod"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/msg_sound_chord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false"
                android:contentDescription="@null"
                android:src="@drawable/common_ratio_select"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:onClick="onSoundTritoneClick" >

            <TextView
                android:id="@+id/msg_tip_sound_tritone"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_msg_tip_sound_tritone"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/msg_sound_tritone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="6dip"
                android:checked="false"
                android:contentDescription="@null"
                android:src="@drawable/common_ratio_select"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>