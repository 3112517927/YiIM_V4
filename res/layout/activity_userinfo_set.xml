<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userinfo_set_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    ptr:ptrHeaderBackground="@color/refresh_background"
    ptr:ptrMode="pullDownFromTop" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="72dip"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onAvatarRootViewClick"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/str_input_avatar"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.ikantech.support.widget.YiRoundImageView
                android:id="@+id/userinfo_set_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="9dip"
                android:clickable="true"
                android:contentDescription="@null"
                android:onClick="onAvatarClick"
                android:scaleType="fitXY"
                android:src="@drawable/mini_avatar_shadow" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:contentDescription="@null"
                android:src="@drawable/group_fold_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onNicknameClick"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="108dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_input_nick"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userinfo_set_nick"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:contentDescription="@null"
                android:src="@drawable/group_fold_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="108dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_input_account"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userinfo_set_account"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="24dip"
            android:background="@color/cell_header_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="108dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_input_gender"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userinfo_set_gender"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onRegionClick"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="108dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_input_district"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userinfo_set_district"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:contentDescription="@null"
                android:src="@drawable/group_fold_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52dip"
            android:background="@drawable/contact_list_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onSignClick"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="108dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/str_input_sign"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userinfo_set_sign"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:contentDescription="@null"
                android:src="@drawable/group_fold_arrow" />
        </LinearLayout>
    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>